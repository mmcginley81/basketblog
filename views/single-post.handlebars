
<div class="card">
  <div class="card-header">
    {{post.title}}
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">{{post.post_text}}</p>
    <a href="#" class="btn btn-primary">Maybe link this button to comments</a>
  </div>
  {{#if post.comments}}
    <div>
      <h2>Comments</h2>
      {{#each post.comments}}
        <div class="card-body">
        <br>
        <p class="card-text">{{this.comment_text}}</p>
        <p class="card-text">by {{user.username}}</p>
       </div>
       {{/each}}
    </div>
    {{/if}}
</div>